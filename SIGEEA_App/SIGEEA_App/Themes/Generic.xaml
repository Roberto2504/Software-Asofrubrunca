    <Style TargetType="{x:Type local:ccCliente}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ccCliente}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}" Width="552.39">
                        <Grid Height="35.4" Width="Auto" Margin="0" Background="{Binding ColorCatCliente, RelativeSource={RelativeSource TemplatedParent}}">
                            <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="1.6,2.827,0,4.333" TextWrapping="Wrap" Text="{Binding NombreCompletoCliente, RelativeSource={RelativeSource TemplatedParent}}" Width="242.401"/>
                            <Rectangle Fill="Black" HorizontalAlignment="Left" Margin="249.001,0,0,0" Stroke="Black" Width="3.333"/>
                            <TextBlock x:Name="textBlock1" HorizontalAlignment="Stretch" Margin="257.334,6.667,177.723,10" TextWrapping="Wrap" Text="{Binding CedulaCliente, RelativeSource={RelativeSource TemplatedParent}}" Width="Auto"/>
                            <Rectangle Fill="Black" HorizontalAlignment="Right" Margin="0,0,170.056,0" Stroke="Black" Width="2.667"/>
                            <Button x:Name="button" Content="Editar" Margin="0,2.827,101,7.573" HorizontalAlignment="Right" Width="59.501"/>
                            <Button x:Name="button1" Content="Eliminar" HorizontalAlignment="Right" Height="0.267" Margin="0,2.827,10,0" VerticalAlignment="Top" Width="71"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:ccEditar}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ccEditar}">
                    <ControlTemplate.Resources>
                        <Storyboard x:Key="Storyboard1"/>
                    </ControlTemplate.Resources>
                    <Border Background="{TemplateBinding Background}"
                		BorderBrush="{TemplateBinding BorderBrush}"
                		BorderThickness="{TemplateBinding BorderThickness}" Height="40">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="rectangle">
                                            <EasingColorKeyFrame KeyTime="0" Value="#FF5F5FDE"/>
                                        </ColorAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)" Storyboard.TargetName="rectangle">
                                            <EasingDoubleKeyFrame KeyTime="0" Value="0.976"/>
                                        </DoubleAnimationUsingKeyFrames>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)" Storyboard.TargetName="rectangle">
                                            <EasingDoubleKeyFrame KeyTime="0" Value="0.944"/>
                                        </DoubleAnimationUsingKeyFrames>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="rectangle">
                                            <EasingDoubleKeyFrame KeyTime="0" Value="0.1"/>
                                        </DoubleAnimationUsingKeyFrames>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="rectangle">
                                            <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="rectangle">
                                            <EasingColorKeyFrame KeyTime="0" Value="#FFFB1616"/>
                                        </ColorAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Grid Height="38" Width="125">
                            <Rectangle x:Name="rectangle" Fill="#FFAAAAE8" Stroke="Black" RadiusY="9.7" RadiusX="9.7" RenderTransformOrigin="0.5,0.5">
                                <Rectangle.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                            <TextBlock x:Name="textBlock" Margin="10,4.6,29.6,5.675" TextWrapping="Wrap" Text="EDITAR" FontFamily="Segoe WP Black" FontSize="18.667"/>
                            <Image x:Name="image" HorizontalAlignment="Right" Margin="0,4.6,8,4.075" Width="25.8" Source="Editar.png" OpacityMask="{x:Null}"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <EventTrigger RoutedEvent="UIElement.MouseMove"/>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

