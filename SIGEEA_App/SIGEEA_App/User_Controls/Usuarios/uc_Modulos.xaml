<UserControl x:Class="SIGEEA_App.User_Controls.Usuarios.uc_Modulos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SIGEEA_App.User_Controls.Usuarios"
             mc:Ignorable="d" Height="30" Width="190">
    <UserControl.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFAEABFF" Offset="0"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.Background>
    <Grid x:Name="grdModulo">
        <TextBlock x:Name="txtNomModulo" HorizontalAlignment="Left" Margin="10,7,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="142" Height="18" FontFamily="Segoe UI Light" FontSize="14"/>
        <CheckBox x:Name="cbxSeleccionado" Content="" HorizontalAlignment="Left" Margin="165,6,0,0" VerticalAlignment="Top" Width="25"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="190"/>

    </Grid>
</UserControl>
