<UserControl x:Class="SIGEEA_App.User_Controls.uc_Contacto"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SIGEEA_App.User_Controls"
             mc:Ignorable="d" Height="44.814" Width="407.442" Background="#FF444E7E">
    <Grid Name="grdContenedor">
        <Image x:Name="imgContacto" HorizontalAlignment="Left" Margin="10,10,0,10" Width="31.419" Stretch="Fill" Source="{Binding TipoInfo, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:uc_Contacto}}}"/>
        <TextBlock x:Name="txbDato" Margin="55.419,10,110.628,10" TextWrapping="Wrap" FontSize="18.667" FontWeight="Bold" Text="{Binding Info, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:uc_Contacto}}}"/>
        <Button x:Name="btnEditar" Content="Editar" HorizontalAlignment="Right" Margin="0,10,10,10" Width="75.116"/>
        <TextBlock x:Name="txbIdContacto" Height="7.019" Margin="0,0,125.877,1.655" TextWrapping="Wrap" VerticalAlignment="Bottom" FontSize="4" FontWeight="Bold" HorizontalAlignment="Right" Width="71.55" Text="{Binding ContactoId, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:uc_Contacto}}}" Visibility="Hidden"/>
    </Grid>
</UserControl>
